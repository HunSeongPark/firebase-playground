<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/home_fragment"
    android:id="@+id/nav_graph">

    <fragment android:id="@+id/home_fragment"
        android:name="com.hunseong.recycle.home.HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/home_to_add"
            app:destination="@id/add_fragment"
            />

    </fragment>

    <fragment android:id="@+id/add_fragment"
        android:name="com.hunseong.recycle.add.AddFragment"
        tools:layout="@layout/fragment_add"/>

    <fragment android:id="@+id/chat_fragment"
        android:name="com.hunseong.recycle.chat.ChatFragment"
        tools:layout="@layout/fragment_chat"/>

    <fragment android:id="@+id/my_fragment"
        android:name="com.hunseong.recycle.my.MyFragment"
        tools:layout="@layout/fragment_my"/>

</navigation>